<br />

<div class = 'booyah-box col-xs-10 col-xs-offset-1'>
	<h1>What I'm Learning</h1>
	<% current_user.enrolled_courses.each do |course| %>
		<h3 class = 'text-center'>
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />

		<%= image_tag course.image, :class => 'img-responsive col-xs-10 col-xs-offset-1' %>
		<br />
		<div class = 'col-xs-10 col-xs-offset-1 text-center'>
			<%= course.description %>
			<br />
			<%= link_to "More info", course_path(course), :class => 'btn btn-large btn-danger' %>

		</div>
		
		<hr class = 'col-xs-8 col-xs-offset-2'>
		<br class = 'clear' />
	<% end %>

	<h1>What I'm Teaching</h1>
	<br />
	<br />
	<% current_user.courses.each do |course| %>
		<h3 class = 'text-center'>
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />

		<%= image_tag course.image, :class => 'img-responsive col-xs-10 col-xs-offset-1' %>
		<br />

		<div class = 'col-xs-10 col-xs-offset-1 text-center'>
			<%= course.description %>
			<br />
			<%= link_to "More Info", course_path(course), :class => 'btn btn-large btn-danger' %>
		</div>
		<hr class = 'col-xs-8 col-xs-offset-2'>
		<br class = 'clear' />
		<% end %>
</div>